<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:background="@drawable/background_battle_rating"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="157dp"
        android:layout_height="228dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="21dp"
        android:background="@drawable/background_poster" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_top_comment"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:layout_marginHorizontal="26dp"
        android:layout_marginBottom="21dp"
        android:background="@drawable/background_main_comment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageView_mbti_icon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="19dp"
            android:src="@drawable/istj_circle_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView_mbti_nickname"
            style="@style/textStyleBoldBlack"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="ESFJ / 피자치킨님adfsdafadfsadfsadfsadfs"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/imageView_mbti_icon"
            app:layout_constraintTop_toTopOf="@id/imageView_mbti_icon"
            tools:text="ESFJ / 피자치킨님adfsdafadfsadfsadfsadfs" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView_comment"
            style="@style/textStyleMediumBlack333333"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="20dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="이 드라마는 도전적이고 흥미진진한 플롯이었어.이 드라마는 도전적이고 흥미진진한 플롯이었어.리뷰 최대 세 줄까지 노출..."
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/textView_mbti_nickname"
            app:layout_constraintTop_toBottomOf="@id/textView_mbti_nickname"
            tools:text="이 드라마는 도전적이고 흥미진진한 플롯이었어.이 드라마는 도전적이고 흥미진진한 플롯이었어.리뷰 최대 세 줄까지 노출..." />

    </androidx.constraintlayout.widget.ConstraintLayout>

