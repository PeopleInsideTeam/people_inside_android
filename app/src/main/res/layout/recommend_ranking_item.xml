<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.beside153.peopleinside.model.RankingItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="22dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvPoster"
            android:layout_width="100dp"
            android:layout_height="140dp"
            app:cardCornerRadius="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_poster"
                android:scaleType="centerCrop"
                android:src="@drawable/img_sample_poster" />

            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:text="@{item.ranking}"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="1" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvTitle"
            style="@style/textStyleBoldBlack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@{item.title}"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cvPoster"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="어느 날 우리 집 현관으로 멸망이 들어왔다." />

        <TextView
            android:id="@+id/tvDescription"
            style="@style/textStyleMediumBlack333333"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@{item.description}"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            tools:text="이 드라마는 도전적이고 흥미진진한 플롯이었어.최대 2줄처리 필요합니다. 참고 부탁합니다" />

        <TextView
            android:id="@+id/tvTotalRating"
            style="@style/textStyleMediumBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_total_rating"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:paddingVertical="5dp"
            android:text="@{item.totalRating}"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintTop_toBottomOf="@id/tvDescription"
            app:layout_constraintVertical_bias="1"
            tools:text="전체 4.3점" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:background="@drawable/background_mbti_rating"
            android:drawablePadding="4dp"
            android:fontFamily="@font/notosans_kr_medium"
            android:gravity="center"
            android:letterSpacing="-0.05"
            android:paddingHorizontal="8dp"
            android:paddingVertical="5dp"
            android:text="@{item.mbtiRating}"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:drawableStartCompat="@drawable/ic_clap_hands"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvTotalRating"
            app:layout_constraintTop_toTopOf="@id/tvTotalRating"
            tools:text="ESFJ 4.5점" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
