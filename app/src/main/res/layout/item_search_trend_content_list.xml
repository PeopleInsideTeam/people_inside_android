<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.beside153.peopleinside.model.search.SearchTrendItem" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="15dp"
            android:weightSum="100">

            <TextView
                style="@style/textStyleBoldBlack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:gravity="center"
                android:text="@{item.ranking}"
                android:textSize="16sp"
                tools:text="10" />

            <TextView
                style="@style/textStyleMediumGray800"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="93"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingHorizontal="6dp"
                android:text="@{item.contentTitle}"
                android:textSize="16sp"
                tools:text="분노의 질주: 라이드 오어 다이" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_EAEAEA" />

    </LinearLayout>
</layout>
