<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="commentItem"
            type="com.beside153.peopleinside.view.contentdetail.ContentDetailScreenAdapter.ContentDetailScreenModel.CommentItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="153dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/background_card_shadow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/mbtiIconImageView"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="19dp"
            android:src="@drawable/istj_circle_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/mbtiNicknameTextView"
            style="@style/textStyleBoldBlack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{commentItem.nickname}"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@id/verticalDotsImageView"
            app:layout_constraintStart_toEndOf="@id/mbtiIconImageView"
            app:layout_constraintTop_toTopOf="@id/mbtiIconImageView"
            tools:text="ESFJ / 피자치킨님adfsdafadfsadfsadfadfsasdfasdfsadfs" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/verticalDotsImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_vertical_dots"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/mbtiNicknameTextView" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/textStyleMediumGray800"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="@{commentItem.comment}"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@id/verticalDotsImageView"
            app:layout_constraintStart_toStartOf="@id/mbtiNicknameTextView"
            app:layout_constraintTop_toBottomOf="@id/mbtiNicknameTextView"
            tools:text="이 드라마는 도전적이고 흥미진진한 플롯이었어.이 드라마는 도전적이고 흥미진진한 플롯이었어.리뷰 최대 세 줄까지 노출..." />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/mbtiNicknameTextView">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/heartIconImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_entp_heart" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/textStyleMediumBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="좋아요 5"
                android:textSize="12sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
